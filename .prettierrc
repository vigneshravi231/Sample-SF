{
  "trailingComma": "es5",
  "tabWidth": 4,
  "useTabs": true,
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "htmlWhitespaceSensitivity": "ignore",
  "printWidth": 140,
  "overrides": [
    {
      "files": "**/lwc/**/*.html",
      "options": {
        "parser": "lwc",
        "tabWidth": 4,
        "useTabs": true,
        "trailingComma": "none",
        "bracketSpacing": true,
        "arrowParens": "always",
        "printWidth": 140
      }
    },
    {
      "files": "*.{cmp,page,component}",
      "options": {
        "parser": "html",
        "tabWidth": 4,
        "useTabs": true,
        "trailingComma": "none",
        "bracketSpacing": true,
        "arrowParens": "always",
        "printWidth": 140
      }
    }
  ]
}
